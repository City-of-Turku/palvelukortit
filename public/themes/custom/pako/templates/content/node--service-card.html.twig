{#
/**
 * @file
 * Theme override to display a node.
 */
#}
{%
  set classes = [
  'node',
  'node--type-' ~ node.bundle|clean_class,
  'service-card',
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
]
%}

<article{{attributes.addClass(classes)}}>
  {% if service_card_navigation %}
    {{ service_card_navigation }}
  {% endif %}
  <div class="service-card__header" {% if service_card_color %}style="border-left-color: {{ service_card_color }};"{% endif %}>
    <h1 class="service-card__title">
      {{ label }}
    </h1>

    {% if content.field_description|render %}
      <div class="service-card__description">
        {{ content.field_description }}
      </div>
    {% endif %}
  </div>

  <div class="service-card__updated-on">
    {% if node.changed.value %}
      <span>
        {{ 'Updated on:'|trans }} {{ node.changed.value|format_date('date') }}
      </span>
    {% endif %}
    {{ drupal_block('content_print_button_block', wrapper=false) }}
  </div>

  <div class="service-card__content">
    {{ content|without('field_description', 'field_service_type', 'field_index') }}
  </div>
</article>
