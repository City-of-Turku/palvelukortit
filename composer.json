{
    "name": "druidfi/turku_palvelukortit",
    "description": "Drupal 8 website for Turku palvelukortit",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/druidfi/turku_palvelukortit",
    "authors": [
        {
            "name": "Druid.fi",
            "email": "info@druid.fi"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "brainmaestro/composer-git-hooks": "^2.7",
        "cweagans/composer-patches": "^1.6.5",
        "dimsemenov/magnific-popup": "^1.1",
        "druidfi/omen": "^0.1.0",
        "drupal/admin_toolbar": "^2.2",
        "drupal/context": "^4.0@beta",
        "drupal/core-composer-scaffold": "^8.8.0",
        "drupal/core-recommended": "^8.8.0",
        "drupal/ctools": "^3.2",
        "drupal/dropzonejs": "^2.0-alpha4",
        "drupal/facets": "^1.4",
        "drupal/magnific_popup": "^1.4",
        "drupal/menu_block": "^1.4",
        "drupal/menu_block_current_language": "^1.2",
        "drupal/pathauto": "^1.6",
        "drupal/search_api": "^1.15",
        "drupal/search_api_solr": "^3.9",
        "drupal/select2": "^1.1",
        "drupal/token": "^1.6",
        "drush/drush": "^10.2",
        "enyo/dropzone": "^5.7.0",
        "select2/select2": "^4.0.7",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "allowed-packages": [
                "drupal/core"
            ],
            "locations": {
                "web-root": "./public"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": false
            }
        },
        "enable-patching": true,
        "installer-paths": {
            "public/core": ["type:drupal-core"],
            "public/libraries/{$name}": ["type:drupal-library"],
            "public/modules/contrib/{$name}": ["type:drupal-module"],
            "public/modules/custom/{$name}": ["type:drupal-module-custom"],
            "public/profiles/{$name}": ["type:drupal-profile"],
            "public/themes/contrib/{$name}": ["type:drupal-theme"],
            "public/themes/custom/{$name}": ["type:drupal-theme-custom"],
            "drush/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/2868193#comment-12258614":"https://www.drupal.org/files/issues/2868193-10.patch",
                "https://www.drupal.org/project/drupal/issues/2313309#comment-12567549":"https://www.drupal.org/files/issues/2018-04-12/2313309-44.patch",
                "https://www.drupal.org/project/drupal/issues/3054641#comment-13385850":"https://www.drupal.org/files/issues/2019-12-10/3054641-14.patch"
            }
        },
        "hooks": {
            "pre-push": "make test"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "enyo/dropzone",
                "version": "5.5.0",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/enyo/dropzone",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "select2/select2",
                "version": "4.0.7",
                "type": "drupal-library",
                "extra": {
                    "installer-name": "select2"
                },
                "dist": {
                    "url": "https://github.com/select2/select2/archive/4.0.7.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "dimsemenov/magnific-popup",
                "version": "1.1.0",
                "type": "drupal-library",
                "extra": {
                    "installer-name": "magnific-popup"
                },
                "dist": {
                    "url": "https://github.com/dimsemenov/Magnific-Popup/archive/1.1.0.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "scripts": {
        "post-install-cmd": "cghooks add --force",
        "post-update-cmd": "cghooks update"
    }
}
